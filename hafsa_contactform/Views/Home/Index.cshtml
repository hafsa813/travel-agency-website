@{
    ViewBag.Title = "Contact Form";
}

<p style="color:brown; text-align:center;">@ViewBag.Message</p>

<h1 style="text-align:center;">Contact Form</h1>


<form method="post" action="@Url.Action("SubmitForm", "Home")" style="max-width: 600px; margin: 30px auto; padding: 30px; background-color: #ffffff; border-radius: 12px; box-shadow: 0px 6px 15px rgba(0,0,0,0.1);">
    
    <div style="margin-bottom: 20px;">
        <label for="name" style="font-size: 16px; color: #555; font-weight: 600;">Name:</label>
        <input type="text" id="name" name="name" placeholder="Enter your name" required
               style="width: 100%; padding: 12px; border-radius: 6px; border: 1px solid #ddd; font-size: 16px; box-sizing: border-box; transition: border-color 0.3s;"
               onfocus="this.style.borderColor='#4CAF50';" onblur="this.style.borderColor='#ddd';" />
    </div>


    <div style="margin-bottom: 20px;">
        <label for="email" style="font-size: 16px; color: #555; font-weight: 600;">Email:</label>
        <input type="email" id="email" name="email" placeholder="Enter your email" required
               style="width: 100%; padding: 12px; border-radius: 6px; border: 1px solid #ddd; font-size: 16px; box-sizing: border-box; transition: border-color 0.3s;"
               onfocus="this.style.borderColor='#4CAF50';" onblur="this.style.borderColor='#ddd';" />
    </div>

    
    <div style="margin-bottom: 20px;">
        <label for="phone" style="font-size: 16px; color: #555; font-weight: 600;">Phone:</label>
        <input type="tel" id="phone" name="phone" placeholder="Enter your phone number" required
               style="width: 100%; padding: 12px; border-radius: 6px; border: 1px solid #ddd; font-size: 16px; box-sizing: border-box; transition: border-color 0.3s;"
               onfocus="this.style.borderColor='#4CAF50';" onblur="this.style.borderColor='#ddd';" />
    </div>


    <div style="text-align: center;">
        <button type="submit" style="padding: 14px 28px; background-color: #4CAF50; color: white; border: none; border-radius: 6px; font-size: 18px; cursor: pointer; width: 100%; transition: background-color 0.3s;">
            Submit
        </button>
    </div>
</form>
